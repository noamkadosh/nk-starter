{
  "name": "@nk/resume",
  "type": "module",
  "private": true,
  "scripts": {
    "postinstall": "npx playwright install chromium",
    "dev": "astro dev",
    "start": "astro dev",
    "generate:pdf": "node ./scripts/generate-pdf.js",
    "generate:resume": "PDF_VIEW=true start-server-and-test http://localhost:4321 generate:pdf",
    "prebuild": "astro check && tsc --noEmit",
    "build": "pnpm generate:resume && astro build",
    "build:light": "THEME=light astro build",
    "build:dark": "THEME=dark astro build",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@astrojs/tailwind": "^5.1.3",
    "@fontsource-variable/inter": "^5.1.0",
    "@playwright/test": "^1.49.1",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.10.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "start-server-and-test": "^2.0.9",
    "tailwindcss": "^3.4.16"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/node": "^9.0.0",
    "astro": "5.1.7"
  }
}
