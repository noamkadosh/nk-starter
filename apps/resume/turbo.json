{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "env": ["THEME", "FORCE_THEME", "PDF_VIEW"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env",
        ".env.*",
        "!**/*.stories.{tsx,jsx,mdx}"
      ],
      "outputs": [".astro/**"]
    },
    "generate:resume": {
      "env": ["THEME", "FORCE_THEME", "PDF_VIEW"],
      "outputs": ["public/resume.pdf"]
    }
  }
}
