{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["CI"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "env": [".env", "THEME"],
            "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "type-check": {},
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
